{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist/",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "pretty": true,
    "baseUrl": "./src",
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}